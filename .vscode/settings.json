{
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "support.other.namespace.php",
                "settings": {
                  "foreground": "#afaca8",   // tavo spalva
                }
            },
            {
                "scope": "comment",
                "settings": {
                    "foreground": "#398d39",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": "entity.name.tag.html",
                "settings": {
                    "foreground": "#53b3e7",
                }
            },
            {
                "scope": "string.quoted.single.js",
                "settings": {
                    "foreground": "#ddaf74",
                }
            },
            {
                "scope": "punctuation.separator",
                "settings": {
                    "foreground": "#22C55E"
                }
            },
            {
                "scope": [
                    "keyword.operator", // bendri operatoriai (pvz., = + - * / > <)
                    "keyword.operator.arithmetic",
                    "keyword.operator.assignment",
                    "keyword.operator.comparison"
                ],
                "settings": {
                    "foreground": "#e74ee5", // pasirink savo spalvą (pvz., fuksinė)
                    "fontStyle": ""
                }
            }
        ]
    },
    "workbench.colorTheme": "Firefox Quantum Dark",
    "workbench.colorCustomizations": {
        "tab.activeBorder": "#ffff00",
    }
}